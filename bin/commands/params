#!/usr/bin/env python
# Show params item in bioprocs.
from sys import stdout, argv
from bioprocs import params

if len(argv) < 2:
	stdout.write('USAGE: params <pname1>[ pname2 pname3 ...]\n')

names = argv[1:]

stdout.write('-' * 100 + '\n')
for n in names:
	val  = getattr(params, n).value
	desc = getattr(params, n).desc
	type = getattr(params, n).type
	stdout.write('{}:\n'.format(n))
	stdout.write('- value: {}\n'.format(val))
	stdout.write('- desc : {}\n'.format(desc))
	stdout.write('- type : {}\n'.format(type.__name__))
	stdout.write('-' * 100 + '\n')
